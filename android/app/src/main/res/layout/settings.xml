<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    tools:textcolor="#000000">

    <LinearLayout
        android:layout_weight="1.05"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#E0E0E0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Account settings"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:freezesText="false"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnfr1"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="#BFBFBF"
            android:onClick="onSelectFragment"
            android:text="Change user name"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnfr2"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="#BFBFBF"
            android:onClick="onSelectFragment"
            android:text="Change password"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnfr3"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:background="#BFBFBF"
            android:onClick="onSelectFragment"
            android:text="Set reading targets " />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_weight="2.90"
        android:orientation="vertical"
        android:background="#E0E0E0"></LinearLayout>
</LinearLayout>