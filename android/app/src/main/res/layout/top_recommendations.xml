<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:background="#FBFBFB"
        android:orientation="horizontal">

        <Button
            android:id="@+id/topButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="2"
            android:background="#757575"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:onClick="onClickTopButton"
            android:text="@string/topButton"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/recommendationsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:background="#BFBFBF"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:onClick="onClickRecommendationsButton"
            android:text="@string/Recom"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragmentsTopRecsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:background="@color/colorSplashScreen"
        android:orientation="vertical"></LinearLayout>
</LinearLayout>